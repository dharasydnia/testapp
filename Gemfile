  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  gem 'therubyracer', :platforms => :ruby

  gem 'uglifier', '>= 1.0.3'
end

group :production do
  gem 'thin'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'rvm-capistrano'
  gem 'capistrano'
end
